<p id="notice"><%= notice %></p>

<h3>Movies</h3>


<table class="table table-borderless table-striped table-dark table-hover table-condensed">
  <thead>
    <tr>
      <th>Title</th>
      <th>Image</th>
      <th>Description</th>
      <th>Genre</th>
      <th>Year</th>
      <% if user_signed_in? %>
      <th colspan="3"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= link_to movie.title, movie %></td>
        <td><%= link_to image_tag(movie.image.url), movie %></td>
        <td><%= movie.description %></td>
        <td><%= movie.genre %></td>
        <td><%= movie.year %></td>
        <td><%= link_to 'Show', movie %></td>
        <% if user_signed_in? %>
        <td><%= link_to 'Edit', edit_movie_path(movie), class: "btn btn-link" %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
<%= link_to 'New Movie', new_movie_path %>
<% end %>