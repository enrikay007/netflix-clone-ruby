<h1>Search:\></h1>

<table class="table table-borderless table-striped table-dark table-hover table-condensed">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Genre</th>
	    <th>Year</th>
      <% if user_signed_in? %>
      <th colspan="2"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= link_to movie.title, movie %></td>
        <td><%= movie.description %></td>
        <td><%= movie.genre %></td>
        <td><%= movie.year %></td>
        <td><%= link_to 'Show', movie %></td>
        <% if user_signed_in? %>
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
